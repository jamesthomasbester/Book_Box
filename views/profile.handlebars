<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New favourite:</h3>

    <form class="form new-favourite-form">
      <div class="form-group">
        <label for="favourite-name">favourite name:</label>
        <input class="form-input" type="text" id="favourite-name" name="favourite-name" />
      </div>
      <div class="form-group">
        <label for="favourite-desc">description:</label>
        <textarea class="form-input" id="favourite-desc" name="favourite-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if favourites.length}}
  <div class="col-md-6 favourite-list">
    <h3>Favourites:</h3>

    {{#each favourites as |favourite|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/favourite/{{favourite.id}}">{{favourite.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{favourite.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
